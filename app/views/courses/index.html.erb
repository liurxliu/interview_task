<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table>
  <thead>
    <tr>
      <th>Theme</th>
      <th>Price</th>
      <th>Currency</th>
      <th>Course Type</th>
      <th>Available</th>
      <th>Url</th>
      <th>Description</th>
      <th>End at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.theme %></td>
        <td><%= course.price %></td>
        <td><%= course.currency %></td>
        <td><%= course.course_type %></td>
        <td><%= course.available %></td>
        <td><%= course.url %></td>
        <td><%= course.description %></td>
        <td><%= course.end_at %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

